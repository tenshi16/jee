<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>controlador.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductLoad</servlet-name>
        <servlet-class>controlador.ProductLoad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>controlador.AddToCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarritoLoad</servlet-name>
        <servlet-class>controlador.CarritoLoad</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Comprar</servlet-name>
        <servlet-class>controlador.Comprar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/LogInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductLoad</servlet-name>
        <url-pattern>/ProductLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarritoLoad</servlet-name>
        <url-pattern>/CarritoLoad</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Comprar</servlet-name>
        <url-pattern>/Comprar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
